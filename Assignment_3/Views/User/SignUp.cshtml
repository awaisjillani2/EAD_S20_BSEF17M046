<div class="text-center">
    <div class="mt-4 mb-3 text-center">
        <img src="~/Content/signup.png" alt="login" class="rounded-circle" style="height: 25%; width: 12%">
    </div>
    <div class="inputWithIcon">
        <label for="name">Enter name</label>
        <input type="text" name="name" id="name" required  class="w-25 p-2 font-weight-bold pl-5">
    </div>
    <br>
    <div class="inputWithIcon">
        <label for="login">Enter Username</label>
        <input type="text" name="login" id="login" required class="w-25 p-2 font-weight-bold pl-5">
    </div>
    <br>
    <div class="inputWithIcon">
        <label for="password">Enter Password</label>
        <input type="password" name="password" id="password" required class="w-25 p-2 font-weight-bold pl-5">
    </div>
    <br>
    <div class="inputWithIcon">
        <label for="cpassword">Confirm Password</label>
        <input type="password" name="cpassword" id="cpassword" required class="w-25 p-2 font-weight-bold pl-5">
    </div>
    <br>
    <button name="signup" type="submit" id="signup" class="btn btn-info">Sign Up</button>
    <div id="statusContainer" class="text-danger font-weight-bold"></div>
    <div id="success" style="display: none">
        <div class="font-weight-bold text-info font-weight-bold mt-3"><h3>Account created successfully!!.</h3></div>
        <a href='@Url.Content("~/User/Login")' class="text-success font-weight-bold">Proceed to Login Page?</a>

    </div>
