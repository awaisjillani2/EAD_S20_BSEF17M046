@{

    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<script>
    $(document).ready(function () {
        $("#signup").click(function () {
            //debugger;
            if ($("#login").val().trim() == "" || $("#name").val().trim() == "" || $("#password").val().trim() == "" || $("#cpassword").val().trim() == "") {
                alert("Please fill all the fields.");
                event.preventDefault();
                return false;
            }
            else if ($("#password").val().trim() != $("#cpassword").val().trim()) {
                alert("Passwords do not match.");
                event.preventDefault();
                return false;
            }
            var data = {};
            data.name = $("#name").val();
            data.login = $("#login").val();
            data.password = $("#password").val();
            let settings = {
                type: "POST",
                dataType: "json",
                url: '@Url.Content("~/User/SaveUser")',
                data: data,
                success: function (resp)
                {
                    if (resp.res == -1) {
                        $("#name").val("");
                        document.getElementById("success").style.display = "none";
                        let div = document.getElementById("statusContainer");
                        div.innerHTML = "";
                        div.innerHTML = "LOGIN ALREADY EXISTS!!"
                        div.style.color = "red";
                    }
                    else if (resp.res == 1) {
                        let div = document.getElementById("statusContainer");
                        div.innerHTML = "";
                        document.getElementById("success").style.display = "block";
                        $("#name").val("");
                        $("#login").val("");
                        $("#password").val("");
                        $("#cpassword").val("");
                    }
                    else
                    {
                        $("#name").val("");
                        $("#login").val("");
                        $("#password").val("");
                        $("#cpassword").val("");
                        document.getElementById("success").style.display = "none";
                        let div = document.getElementById("statusContainer");
                        div.innerHTML = "";
                        div.innerHTML = "Something went wrong.Please Try Again!!";
                        div.style.color = "red";
                    }
                },
                error: function (e)
                {
                   alert("Something Went Wrong!!");
                }
            };
            $.ajax(settings);
            return false;
        });
    });
</script>

